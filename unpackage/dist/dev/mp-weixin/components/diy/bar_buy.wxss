	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border-radius: 1rem;
	overflow: hidden;
}
.right_block .btns>view{
	height: 2rem;
	line-height: 2rem;
	padding: 0 0.7rem;
}
.addCart {
	background-color: var(--color_orange);
}
