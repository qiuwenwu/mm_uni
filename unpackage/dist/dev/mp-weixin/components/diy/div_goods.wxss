
.div_goods>.wrap {
	position: relative;
	padding: 0.8rem;
}
.title {
	font-weight: 600;
}
.price_wrap {
	position: absolute;
	top: -2.2rem;
	left: 0;
	padding: 0.2rem 0.4rem;
	margin: 0.5rem 0;
	background-color: var(--color_orange)
}
.price {
	color: #fff;
	font-weight: 600;
}
.price_ago {
	color: #fff;
	margin-left: .5rem;
	text-decoration: line-through;
	font-size: 0.7rem;
}
.sales {
	font-size: 0.7rem;
	margin: 0.3rem 0;
	color: #949494;
}
.description {
	margin-top: 1rem;
	font-size: 0.8rem;
	color: var(--color_grey);
}

