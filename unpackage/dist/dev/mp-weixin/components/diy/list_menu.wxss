
.list_menu image {
	border-radius: 1rem;
}
.list_menu {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	text-align: center;
	background-color: #fff;
	padding: 0.5rem 0;
}
.list_menu .item_menu {
	-webkit-box-flex: 0;
	-webkit-flex: 0 0 25%;
	        flex: 0 0 25%;
}
@media (min-width:768px){
.list_menu .item_menu {
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		        flex: 1;
}
}
.list_menu .menu text {
	font-size: 1rem;
}
.list_menu .menu image{
	 width: 100%; 
	 height: 100%;
}
.list_menu .menu image:hover{
	-webkit-transform: scale(1.2);
	        transform: scale(1.2);
	-webkit-transition: 0.2 all;
	transition: 0.2 all;
}

